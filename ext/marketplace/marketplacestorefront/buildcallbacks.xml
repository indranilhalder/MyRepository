<!--
 All hybris buildcallbacks.xml macrodefinitions:

 Build/Documentation

	 before/after ant macro "clean"
		 <macrodef name="marketplacestorefront_before_clean"/>
		 <macrodef name="marketplacestorefront_after_clean"/>

	 before/after ant macro "build"
		 <macrodef name="marketplacestorefront_before_build"/>
		 <macrodef name="marketplacestorefront_after_build"/>

	 before/after ant macro "compile_core" - the core module of the extension
		 <macrodef name="marketplacestorefront_before_compile_core">
		 <macrodef name="marketplacestorefront_after_compile_core">

	 before/after ant macro "compile_web" - the web module of the extension
		 <macrodef name="marketplacestorefront_before_compile_web" />
		 <macrodef name="marketplacestorefront_after_compile_web" />

	 before/after ant macro "compile_hmc" - the hmc module of the extension
		 <macrodef name="marketplacestorefront_before_compile_hmc" />
		 <macrodef name="marketplacestorefront_after_compile_hmc" />

 Preparing extension

	 will be called in the beginning of the ant call and only once (also when using multiple 
	 ant targets e.g. ant build yunittest)
		 <macrodef name="marketplacestorefront_only_once_prepare"/>

 Creating ear module/production

	 before/after ant macro "ear"
		 <macrodef name="marketplacestorefront_before_ear"/>
		 <macrodef name="marketplacestorefront_after_ear"/>

	 before/after ant macro "production" - for hybris server only
		 <macrodef name="marketplacestorefront_before_production" />
		 <macrodef name="marketplacestorefront_after_production" />

 JUnit Test

	 before/after ant macro "yunitinit" 
		 <macrodef name="marketplacestorefront_before_yunitinit" />
		 <macrodef name="marketplacestorefront_after_yunitinit" />

	 before/after ant macro "yunit"
		 <macrodef name="marketplacestorefront_before_yunit" />
		 <macrodef name="marketplacestorefront_after_yunit" /> 

 Distribution package

	 before/after ant macro "dist" - internal target; only for use when platform is available in source code
		 <macrodef name="marketplacestorefront_after_dist"/>
		 <macrodef name="marketplacestorefront_before_dist"/>

	 before/after ant macro "dist_copy" - internal target; only for use when platform is available in source code
		 <macrodef name="marketplacestorefront_before_dist_copy"/>
		 <macrodef name="marketplacestorefront_after_dist_copy"/>

-->
<project name="marketplacestorefront_buildcallbacks">
	<property location="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/lib/less-rhino-1.7.3.js" name="tool.less"/>
	<property location="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/lib/lessc-rhino-1.7.3.js" name="tool.lessc"/>
	<property location="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/lib/rhino1_7R4.jar" name="tool.rhino"/>
	<property location="${ext.marketplacestorefront.path}" name="ext.marketplacestorefront.mapperToPath"/>
	<property location="${ext.marketplacestorefront.path}/web/webroot/_ui" name="mpstorefront.webroot.ui" />
	<property location="${ext.marketplacestorefront.path}/web/webroot/_ui/compiler.jar" name="google.closure.jar" />
	<property location="${mpstorefront.webroot.ui}/responsive/common/js/minified" name="mpstorefront.minjs.dir" />
	<property location="${mpstorefront.webroot.ui}/responsive/common/js" name="mpstorefront.js.dir" />
	<property location="**.js" name="alljs.file.expression" />
	<property location="${ext.marketplacestorefront.path}/web/webroot/_ui/yuicompressor.jar" name="yui.compresser.jar" />
	<property location="${mpstorefront.webroot.ui}/responsive/theme-blue/css/minified" name="mpstorefront.mincss.dir" />
	<property location="${mpstorefront.webroot.ui}/responsive/theme-blue/css/minifier-temp" name="mpstorefront.mincss.temp.dir" />
	<property location="${mpstorefront.webroot.ui}/responsive/theme-blue/css/minifier-temp-ie8" name="mpstorefront.mincss.temp.ie8.dir" />
	<property location="${mpstorefront.webroot.ui}/responsive/theme-blue/css/minifier-temp-ie9" name="mpstorefront.mincss.temp.ie9.dir" />
	<property location="${mpstorefront.webroot.ui}/responsive/theme-blue/css" name="mpstorefront.css.dir" />
	<property location="${mpstorefront.mincss.temp.dir}/yuicompressor.jar" name="minifier.yui.compresser.jar" />
	<property location="${mpstorefront.mincss.temp.ie8.dir}/yuicompressor.jar" name="minifier.ie8.yui.compresser.jar" />
	<property location="${mpstorefront.mincss.temp.ie9.dir}/yuicompressor.jar" name="minifier.ie9.yui.compresser.jar" />


	<if>
		<os family="windows"/>
		<then>
			<propertyregex global="true" input="${ext.marketplacestorefront.path}" override="yes" property="ext.marketplacestorefront.mapperToPath" regexp="\\" replace="/"/>
		</then>
	</if>

	<macrodef name="lesscss">
		<sequential>
			<copy todir="${ext.marketplacestorefront.path}/web/webroot/_ui/responsive/">
				<fileset dir="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/_ui-src/responsive/" includes="themes/*"/>
				<regexpmapper from="themes/(.*)" handledirsep="yes" to="theme-\1/css"/>
			</copy>
			<apply dir="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/_ui-src/responsive/themes/" executable="java" failonerror="true" parallel="false">
				<!-- Give the input bundle of less files-->
				<fileset dir="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/_ui-src/responsive/themes/">
					<include name="**/style.less"/>
				</fileset>
				<arg value="-jar"/>
				<arg path="${tool.rhino}"/>
				<arg value="-f"/>
				<arg path="${tool.less}"/>
				<arg path="${tool.lessc}"/>
				<srcfile/>
				<!-- Output the compiled css file with corresponding name -->
				<regexpmapper from="(.*)/less/(.*)\.less$$" handledirsep="yes" to="${ext.marketplacestorefront.mapperToPath}/web/webroot/_ui/responsive/theme-\1/css/\2.css"/>
				<targetfile/>
			</apply>
		</sequential>
	</macrodef>

	<macrodef name="movelibs">
		<sequential>
			<copy todir="${ext.marketplacestorefront.path}/web/webroot/_ui/responsive/common/bootstrap">
				<fileset dir="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/_ui-src/responsive/lib/bootstrap-3.2.0" includes="**"/>
			</copy>
			<copy todir="${ext.marketplacestorefront.path}/web/webroot/_ui/responsive/common/js">
				<fileset dir="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/_ui-src/responsive/lib/ybase-0.1.0/js" includes="**"/>
			</copy>
			<copy todir="${ext.marketplacestorefront.path}/web/webroot/_ui/responsive/">
				<fileset dir="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/_ui-src/responsive/" includes="themes/**/fonts/*"/>
				<regexpmapper from="themes/(.*)/fonts/(.*)" handledirsep="yes" to="theme-\1/fonts/\2"/>
			</copy>
		</sequential>
	</macrodef>

	<macrodef name="generatevariables">
		<sequential>
			<uptodate property="updates" targetfile="${ext.marketplacestorefront.path}/resources/generateVariables.properties" value="true">
				<srcfiles file="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/tags/shared/variables/generatedVariables.tag"/>
				<srcfiles file="${ext.marketplacestorefront.path}/web/webroot/_ui/shared/js/generatedVariables.js"/>
				<srcfiles file="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/_ui-src/shared/less/generatedVariables.less"/>
			</uptodate>
			<if>
				<equals arg1="${updates}" arg2="true"/>
				<then>
					<concat destfile="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/tags/shared/variables/generatedVariables.tag" overwrite="no">
						<string>&lt;%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %&gt;
</string>
						<filelist dir="${ext.marketplacestorefront.path}/resources" files="generateVariables.properties"/>
					</concat>

					<replaceregexp byline="true" file="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/tags/shared/variables/generatedVariables.tag" match="^(?!&lt;%@)(.*)=(.*)" replace="&lt;c:set var=&quot;\1&quot; value=&quot;\2&quot; scope=&quot;session&quot;/&gt;"/>

					<concat destfile="${ext.marketplacestorefront.path}/web/webroot/_ui/shared/js/generatedVariables.js" overwrite="yes">
						<filelist dir="${ext.marketplacestorefront.path}/resources" files="generateVariables.properties"/>
					</concat>

					<replaceregexp byline="true" file="${ext.marketplacestorefront.path}/web/webroot/_ui/shared/js/generatedVariables.js" match="(.*)=(.*)" replace="var \1=&quot;\2&quot;;"/>

					<concat destfile="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/_ui-src/shared/less/generatedVariables.less" overwrite="no">
						<filelist dir="${ext.marketplacestorefront.path}/resources" files="generateVariables.properties"/>
					</concat>

					<replaceregexp byline="true" file="${ext.marketplacestorefront.path}/web/webroot/WEB-INF/_ui-src/shared/less/generatedVariables.less" match="(.*)=(.*)" replace="@\1:\2;"/>
				</then>
			</if>
		</sequential>
	</macrodef>

	<macrodef name="marketplacestorefront_after_build">
		<sequential>
			<echo message="marketplacestorefront_after_build"/>
			<impexGenerate extname="marketplacestorefront"/>
			<containsExact separator=";" string="${extension.names}" substring="addonsupport">
				<do>
					<foreachext>
						<do>
							<for delimiter=";" list="${addon.folder}" param="addOnFile">
								<sequential>
									<if>
										<available file="${ext.@{extname}.path}/acceleratoraddon/@{addOnFile}"/>
										<then>
											<copyAddOnToExtension addonextension="@{extname}" addonresource="@{addOnFile}" target="marketplacestorefront"/>
										</then>
									</if>
								</sequential>
							</for>
						</do>
					</foreachext>
				</do>
			</containsExact>
			<ui/>			
			<serverinfo/>
		</sequential>
	</macrodef>


	<macrodef name="marketplacestorefront_before_build">
		<sequential>
			<echo message="marketplacestorefront_before_build"/>
			<generatevariables/>
			<foreachext>
				<do>
					<if>
						<available file="${ext.@{extname}.path}/commonweb"/>
						<then>
							<echo message="Found commonweb extension:  @{extname}"/>
							<copyCommonWebToExtension commonwebextension="@{extname}" commonwebresource="/src" target="marketplacestorefront"/>
						</then>
					</if>
				</do>
			</foreachext>
		</sequential>


	</macrodef>


	<!-- 
		Called whenever 'ant ear' is used. this callback can be used to modify the content of the ear file

		${ear.path}: 			path to ear
	 -->
	<macrodef name="marketplacestorefront_after_clean">
		<sequential>
			<!-- Addon folders in storefronts are always cleaned (even if there is no addonsupport on localextension list) -->
			<addonclean/>
			<commonwebclean/>
		</sequential>
	</macrodef>

	<target description="compile the _ui-src folder in _ui" name="compileuisrc">
		<lesscss/>
		<movelibs/>
	</target>

	<macrodef name="ui" description="minifies the js and css files in the storefront under folder _ui">
		<sequential>
			<if>
				<equals arg1="${storefront.minification.enabled}" arg2="true" />
				<then>
					<tstamp>
						<format property="timestamp" pattern="ddMMYYYYhhmmss" locale="en,GB" />
					</tstamp>
					<propertyfile file="${HYBRIS_CONFIG_DIR}/local.properties">
						<entry key="marketplace.minification.build.time" type="string" value="${timestamp}"/>
					</propertyfile>
					<delete dir="${mpstorefront.minjs.dir}" />
					<delete dir="${mpstorefront.mincss.temp.dir}" />
					<delete dir="${mpstorefront.mincss.temp.ie8.dir}" />
					<delete dir="${mpstorefront.mincss.temp.ie9.dir}" />
					<delete file="${mpstorefront.css.dir}/tmpmain.min.css" />
					<delete file="${mpstorefront.css.dir}/main-ie8-min.css" />
					<delete file="${mpstorefront.css.dir}/main-ie9-min.css" />
					<mkdir dir="${mpstorefront.minjs.dir}" />
					<mkdir dir="${mpstorefront.mincss.temp.dir}" />
					<mkdir dir="${mpstorefront.mincss.temp.ie8.dir}" />
					<mkdir dir="${mpstorefront.mincss.temp.ie9.dir}" />
					<echo message="Minifying JS..."/>
					<java jar="${google.closure.jar}" dir="${mpstorefront.webroot.ui}" fork="true">
						<arg line="--compilation_level SIMPLE" />
						<arg line="--language_in ECMASCRIPT5" />
						<arg line="--warning_level QUIET" />
						<arg line="--js ${mpstorefront.js.dir}/mpl/**.js" />
						<arg line="--js_output_file ${mpstorefront.minjs.dir}/tmpmain.min.js" />
					</java>
					<java jar="${google.closure.jar}" dir="${mpstorefront.webroot.ui}" fork="true">
						<arg line="--compilation_level SIMPLE" />
						<arg line="--language_in ECMASCRIPT5" />
						<arg line="--warning_level QUIET" />
						<arg line="--js ${mpstorefront.js.dir}/plugins/**.js" />
						<arg line="--js_output_file ${mpstorefront.minjs.dir}/plugins.min.js" />
					</java>
					<java jar="${google.closure.jar}" dir="${mpstorefront.webroot.ui}" fork="true">
						<arg line="--compilation_level SIMPLE" />
						<arg line="--language_in ECMASCRIPT5" />
						<arg line="--warning_level QUIET" />
						<arg line="--js ${mpstorefront.js.dir}/ia-plugins/**.js" />
						<arg line="--js_output_file ${mpstorefront.minjs.dir}/ia.min.js" />
					</java>
					<java jar="${google.closure.jar}" dir="${mpstorefront.webroot.ui}" fork="true">
						<arg line="--compilation_level SIMPLE" />
						<arg line="--language_in ECMASCRIPT5" />
						<arg line="--warning_level QUIET" />
						<arg line="--js ${mpstorefront.js.dir}/ie9_lower_plugins/**.js" />
						<arg line="--js_output_file ${mpstorefront.minjs.dir}/ie9.min.js" />
					</java>
					<java jar="${google.closure.jar}" dir="${mpstorefront.webroot.ui}" fork="true">
						<arg line="--compilation_level SIMPLE" />
						<arg line="--language_in ECMASCRIPT5" />
						<arg line="--warning_level QUIET" />
						<arg line="--js ${mpstorefront.js.dir}/ie10_lower_plugins/**.js" />
						<arg line="--js_output_file ${mpstorefront.minjs.dir}/ie10.min.js" />
					</java>
					<copy file="${yui.compresser.jar}" tofile="${minifier.yui.compresser.jar}" />
					<copy file="${yui.compresser.jar}" tofile="${minifier.ie8.yui.compresser.jar}"/>
					<copy file="${yui.compresser.jar}" tofile="${minifier.ie9.yui.compresser.jar}"/>
					<copy todir="${mpstorefront.mincss.temp.dir}">
						<fileset dir="${mpstorefront.css.dir}" includes="*.css" excludes="hybris.cms.live.edit.css,main-ie8.css,main-ie9.css" />
					</copy>
					<copy todir="${mpstorefront.mincss.temp.ie8.dir}">
						<fileset dir="${mpstorefront.css.dir}" includes="main-ie8.css" />
					</copy>
					<copy todir="${mpstorefront.mincss.temp.ie9.dir}">
						<fileset dir="${mpstorefront.css.dir}" includes="main-ie9.css" />
					</copy>
					<echo message="Minifying CSS..." />
					<pathconvert pathsep=" " property="customcssfiles">
						<fileset dir="${mpstorefront.mincss.temp.dir}">
							<include name="*.css" />
						</fileset>
					</pathconvert>
					<pathconvert pathsep=" " property="ie8cssfiles">
						<fileset dir="${mpstorefront.mincss.temp.ie8.dir}">
							<include name="*.css" />
						</fileset>
					</pathconvert>
					<pathconvert pathsep=" " property="ie9cssfiles">
						<fileset dir="${mpstorefront.mincss.temp.ie9.dir}">
							<include name="*.css" />
						</fileset>
					</pathconvert>
					<java jar="${minifier.yui.compresser.jar}" dir="${mpstorefront.mincss.temp.dir}" fork="true">
						<arg line="--type css" />
						<arg line="-o '.css$:-min.css'" />
						<arg line="${customcssfiles}" />
					</java>
					<java jar="${minifier.ie8.yui.compresser.jar}" dir="${mpstorefront.mincss.temp.ie8.dir}" fork="true">
						<arg line="--type css" />
						<arg line="-o '.css$:-min.css'" />
						<arg line="${ie8cssfiles}" />
					</java>
					<java jar="${minifier.ie9.yui.compresser.jar}" dir="${mpstorefront.mincss.temp.ie9.dir}" fork="true">
						<arg line="--type css" />
						<arg line="-o '.css$:-min.css'" />
						<arg line="${ie9cssfiles}" />
					</java>
					<echo message="Merging minfied CSS..." />
					<concat destfile="${mpstorefront.css.dir}/tmpmain.min.css" append="true">
						<fileset dir="${mpstorefront.mincss.temp.dir}">
							<include name="*-min.css" />
						</fileset>
					</concat>
					<copy file="${mpstorefront.mincss.temp.ie8.dir}/main-ie8-min.css" tofile="${mpstorefront.css.dir}/main-ie8-min.css" />
					<copy file="${mpstorefront.mincss.temp.ie9.dir}/main-ie9-min.css" tofile="${mpstorefront.css.dir}/main-ie9-min.css" />
					<delete dir="${mpstorefront.mincss.temp.dir}" />
					<delete dir="${mpstorefront.mincss.temp.ie8.dir}" />
					<delete dir="${mpstorefront.mincss.temp.ie9.dir}" />
				</then>
			</if>
		</sequential>
	</macrodef>
	
	<macrodef name="serverinfo" description="Copy the serverinfo.properties file">
		<sequential>
			<echo message="####Starting Serverinfo.properties movement##### "/>
			<delete dir="${HYBRIS_BIN_DIR}/platform/tomcat/lib/org/apache/catalina/util"/>
			<mkdir dir="${HYBRIS_BIN_DIR}/platform/tomcat/lib/org/apache/catalina/util"/>
			<copy todir="${HYBRIS_BIN_DIR}/platform/tomcat/lib/org/apache/catalina/util">
					<fileset dir="${ext.marketplacestorefront.path}/resources" includes="ServerInfo.properties"/>
			</copy>
			<echo message="#####EndServerinfo.properties movement##### "/>
		</sequential>
	</macrodef>

	<target name="ui" description="minifies the js and css files in the storefront under folder _ui">
		<ui/>
	</target>
	
	<target name="serverinfo" description="Copy the serverinfo.properties file" >
		<serverinfo/>
	</target>

	<target name="clean-ui" description="deletes the minified js">
		<delete dir="${mpstorefront.minjs.dir}" />
		<delete dir="${mpstorefront.mincss.temp.dir}" />
		<delete dir="${mpstorefront.mincss.temp.ie8.dir}" />
		<delete dir="${mpstorefront.mincss.temp.ie9.dir}" />
		<delete file="${mpstorefront.css.dir}/tmpmain.min.css" />
		<delete file="${mpstorefront.css.dir}/main-ie8-min.css" />
		<delete file="${mpstorefront.css.dir}/main-ie9-min.css" />
		<echo message="Cleaned!" />
	</target>

</project>
