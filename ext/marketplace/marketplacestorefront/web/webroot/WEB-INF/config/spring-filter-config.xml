<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util.xsd
		http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
		
	<context:annotation-config/> 
		
	<!-- tenant scoped filter -->

	<bean id="storefrontTenantFilterChain" class="com.tisl.mpl.storefront.filters.UrlPathFilter" >
		<property name="defaultFilter" ref="storefrontTenantDefaultFilterChain"/>
		<property name="urlPathHelper">
			<bean class="org.springframework.web.util.UrlPathHelper"/>
		</property>
		<property name="urlPathMapping">
			<map>
				<entry key="/integration/" value-ref="integrationTenantFilterChain"/>
				<entry key="/fetchToken" value-ref="ajaxUrlFilterChain"/>	<!-- TISPT-207 Custom filter chain for fetchToken -->
				<!-- <entry key="/setheader" value-ref="ajaxUrlFilterChain"/> -->	<!-- TISPT-207 Custom filter chain for setHeader -->
				<entry key="/getTealiumData" value-ref="ajaxUrlFilterChain"/>	<!-- TISPT-207 Custom filter chain for TealiumData -->
				
			
			<!-- TISPT-348 Custom filter chain for the following methods Start-->
		     	<entry key="/search" value-ref="withoutCartRestorationFilterChain"/>	
				<entry key="/m" value-ref="withoutCartRestorationFilterChain"/>	
			
				<entry key="/headerTrackOrder" value-ref="withoutCartRestorationFilterChain"/>
				<entry key="/departmentCollection" value-ref="withoutCartRestorationFilterChain"/>	
				
				<entry key="/getCollectionShowcase" value-ref="withoutCartRestorationFilterChain"/>
				<entry key="/getStayQuedHomepage" value-ref="withoutCartRestorationFilterChain"/>
				<entry key="/getPromoBannerHomepage" value-ref="withoutCartRestorationFilterChain"/>
				<entry key="/getNewAndExclusive" value-ref="withoutCartRestorationFilterChain"/>
				<entry key="/getProductsYouCare" value-ref="withoutCartRestorationFilterChain"/>
				<entry key="/getBestPicks" value-ref="withoutCartRestorationFilterChain"/>
				<entry key="/getBrandsYouLove" value-ref="withoutCartRestorationFilterChain"/>
				<entry key="/getShowcaseContent" value-ref="withoutCartRestorationFilterChain"/>
				<entry key="/getBrandsYouLoveContent" value-ref="withoutCartRestorationFilterChain"/>
				
				<entry key="/headerloginhi" value-ref="withoutCartRestorationFilterChain"/>
				<entry key="/sociallogin" value-ref="withoutCartRestorationFilterChain"/>
				<entry key="/headerWishlist" value-ref="withoutCartRestorationFilterChain"/>
				
		 		<!-- TISPT-348 Custom filter chain for the following methods End-->		
				<entry key="/p" value-ref="onlyPDPRestorationFilterChain"/>					
			</map>
		</property>
	</bean>

	<alias name="defaultStorefrontTenantDefaultFilterChainList" alias="storefrontTenantDefaultFilterChainList" />
	<util:list id="defaultStorefrontTenantDefaultFilterChainList">
		<!-- generic platform filters -->
		<ref bean="log4jFilter"/>
		<ref bean="storefrontSessionFilter"/>
		<!-- <ref bean="addOnDevelopmentFilter"/> -->

		<!-- filter to log the current request -->
		<ref bean="requestLoggerFilter"/>

		<!-- filter to setup the cms integration -->
		<ref bean="cmsSiteFilter"/>

		<!-- filter to initialize the storefront -->
		<ref bean="storefrontFilter"/>

		<!-- filter to handle url encoding attributes -->
		<ref bean="urlEncoderFilter"/>

		<!-- Security -->
		<ref bean="springSecurityFilterChain"/>

		<!-- filter to log out guest user if he/she attempts to access a page outside of checkout flow -->
		<ref bean="anonymousCheckoutFilter"/>

		<!-- filter to restore items in cart -->
		<ref bean="cartRestorationFilter"/>

		<!-- filter to restore customer preferred location -->
		<ref bean="customerLocationRestorationFilter"/>

        <ref bean="userDetailsRestorationFilter"/>
		<!-- btg filters -->
		<!-- Remove these filters to disable BTG integration. Also remove the BtgSegmentBeforeViewHandler -->
		<!-- 
		<ref bean="refererHeaderBtgFilter"/>
		<ref bean="requestParamsBtgFilter"/>
		<ref bean="productVisitedBtgFilter"/>
		<ref bean="categoryVisitedBtgFilter"/>
		<ref bean="btgSegmentFilter"/>
		 -->	
	</util:list>
	
	<bean id="storefrontTenantDefaultFilterChain" class="de.hybris.platform.servicelayer.web.PlatformFilterChain" >
		<constructor-arg>
			<ref bean="storefrontTenantDefaultFilterChainList"/>
		</constructor-arg>
	</bean>
	
	<alias name="defaultIntegrationTenantFilterChainList" alias="integrationTenantFilterChainList" />
	<util:list id="defaultIntegrationTenantFilterChainList">
		<!-- generic platform filters -->
		<ref bean="storefrontSessionFilter"/>
		<!-- <ref bean="addOnDevelopmentFilter"/> -->
		<!-- filter to log the current request -->
		<ref bean="requestLoggerFilter"/>	
	</util:list>

	<bean id="integrationTenantFilterChain" class="de.hybris.platform.servicelayer.web.PlatformFilterChain" >
		<constructor-arg>
			<ref bean="integrationTenantFilterChainList" />
		</constructor-arg>
	</bean>

	<bean id="urlEncoderFilter" class="com.tisl.mpl.storefront.filters.UrlEncoderFilter" >
		<property name="urlEncoderFacade" ref="urlEncoderFacade"/>
		<property name="sessionService" ref="sessionService"/>
	</bean>

	<bean id="storefrontSessionFilter" class="de.hybris.platform.servicelayer.web.SessionFilter" >
		<property name="sessionService" ref="sessionService"/>
	</bean>

	<!-- <bean id="addOnDevelopmentFilter" class="com.tisl.mpl.storefront.filters.AcceleratorAddOnFilter" >
		<property name="configurationService" ref="configurationService"/>
	</bean> -->

	<bean id="requestLoggerFilter" class="com.tisl.mpl.storefront.filters.RequestLoggerFilter"/>

	<bean id="cmsSiteFilter" class="com.tisl.mpl.storefront.filters.cms.CMSSiteFilter" >
		<property name="previewDataModelUrlResolver" ref="previewDataModelUrlResolver"/>
		<property name="cmsSiteService" ref="cmsSiteService"/>
		<property name="cmsPreviewService" ref="cmsPreviewService"/>
		<property name="baseSiteService" ref="baseSiteService"/>
		<property name="commerceCommonI18NService" ref="commerceCommonI18NService"/>
		<property name="sessionService" ref="sessionService"/>
		<property name="contextInformationLoader" ref="contextInformationLoader"/>
		<property name="cmsPageContextService" ref="cmsPageContextService"/>
	</bean>

	<bean id="storefrontFilter" class="com.tisl.mpl.storefront.filters.StorefrontFilter" >
		<property name="storeSessionFacade" ref="storeSessionFacade"/>
		<property name="browseHistory" ref="browseHistory"/>
		<property name="cookieGenerator" ref="sessionCookieGenerator"/>
		<property name="cartRestoreCookieGenerator" ref="cartRestoreCookieGenerator"/>
		<property name="cartService" ref="cartService"/>
	</bean>
	
	<bean id="cartRestorationFilter" class="com.tisl.mpl.storefront.filters.CartRestorationFilter" >
		<property name="baseSiteService" ref="baseSiteService"/>
		<property name="cartService" ref="cartService"/>
		<property name="cartFacade" ref="cartFacade"/>
		<property name="cartRestoreCookieGenerator" ref="cartRestoreCookieGenerator"/>
		<property name="userService" ref="userService"/>
		<property name="sessionService" ref="sessionService"/>	
	</bean>

	<bean id="anonymousCheckoutFilter" class="com.tisl.mpl.storefront.filters.AnonymousCheckoutFilter" >
		<property name="guestCheckoutCartCleanStrategy"  ref="guestCheckoutCartCleanStrategy" />
	</bean>

	<bean id="customerLocationRestorationFilter" class="com.tisl.mpl.storefront.filters.CustomerLocationRestorationFilter" >
		<property name="customerLocationFacade" ref="customerLocationFacade"/>
		<property name="customerLocationCookieGenerator" ref="customerLocationCookieGenerator"/>
	</bean>
	
	<bean id="userDetailsRestorationFilter" class="com.tisl.mpl.storefront.filters.UserDetailsRestorationFilter" >
		<property name="userCookieGenerator" ref="defaultUserCookieGenerator"/>
		<property name="userTypeCookieGenerator" ref="defaultUserTypeCookieGenerator"/>
		<property name="userService" ref="userService"/>
		<property name="sessionService" ref="sessionService"/>	
		<property name="configurationService" ref="configurationService"/>
	</bean>
	

	<alias name="defaultSessionCookieGenerator" alias="sessionCookieGenerator"/>
	<bean id="defaultSessionCookieGenerator" class="com.tisl.mpl.storefront.security.cookie.EnhancedCookieGenerator" >
		<property name="cookieSecure" value="true"/>
		<property name="cookieName" value="JSESSIONID"/>
		<property name="cookieMaxAge" value="-1"/>
		<property name="useDefaultPath" value="false"/>
		<property name="httpOnly" value="true"/>
	</bean>
	
	<alias name="defaultCartRestoreCookieGenerator" alias="cartRestoreCookieGenerator"/>
	<bean id="defaultCartRestoreCookieGenerator" class="com.tisl.mpl.storefront.security.cookie.CartRestoreCookieGenerator" >
		<property name="cookieSecure" value="false"/>
		<property name="cookieMaxAge" value="360000000"/>
		<property name="useDefaultPath" value="false"/>
		<property name="httpOnly" value="true"/>
		<property name="baseSiteService" ref="baseSiteService"/>
		<property name="useDefaultDomain" value="false"/>
		<property name="customDomain" value="#{configurationService.configuration.getProperty('shared.cookies.domain')}"/>
	</bean>

	<alias name="defaultCustomerLocationCookieGenerator" alias="customerLocationCookieGenerator"/>
	<bean id="defaultCustomerLocationCookieGenerator" class="com.tisl.mpl.storefront.security.cookie.CustomerLocationCookieGenerator" >
		<property name="cookieSecure" value="false"/>
		<property name="cookieMaxAge" value="360000000"/>
		<property name="useDefaultPath" value="false"/>
		<property name="httpOnly" value="true"/>
		<property name="baseSiteService" ref="baseSiteService"/>
	</bean>

<bean id="defaultUserCookieGenerator" class="com.tisl.mpl.storefront.security.cookie.UserCookieGenerator" >
		<property name="baseSiteService" ref="baseSiteService"/>
		<property name="cookieSecure" value="false"/>
		<property name="cookieMaxAge" value="360000000"/>
		<property name="useDefaultPath" value="false"/>
		<property name="useDefaultDomain" value="false"/>
		<property name="customDomain" value="#{configurationService.configuration.getProperty('shared.cookies.domain')}"/>
	</bean>
	
	<bean id="defaultUserTypeCookieGenerator" class="com.tisl.mpl.storefront.security.cookie.UserTypeCookieGenerator" >
		<property name="baseSiteService" ref="baseSiteService"/>
		<property name="cookieSecure" value="false"/>
		<property name="cookieMaxAge" value="360000000"/>
		<property name="useDefaultPath" value="false"/>
		<property name="useDefaultDomain" value="false"/>
		<property name="customDomain" value="#{configurationService.configuration.getProperty('shared.cookies.domain')}"/>
	</bean>
	
	<!-- Luxury site cookies -->
	<bean id="luxuryEmailCookieGenerator" class="com.tisl.mpl.storefront.security.cookie.LuxuryEmailCookieGenerator" >
		<property name="cookieSecure" value="false"/>
		<property name="cookieMaxAge" value="360000000"/>
		<property name="useDefaultPath" value="false"/>
		<property name="useDefaultDomain" value="false"/>
		<property name="customDomain" value="#{configurationService.configuration.getProperty('shared.cookies.domain')}"/> 
	</bean>
	<bean id="luxuryUserCookieGenerator" class="com.tisl.mpl.storefront.security.cookie.LuxuryUserCookieGenerator" >
		<property name="cookieSecure" value="false"/>
		<property name="cookieMaxAge" value="360000000"/>
		<property name="useDefaultPath" value="false"/>
		<property name="useDefaultDomain" value="false"/>
		<property name="customDomain" value="#{configurationService.configuration.getProperty('shared.cookies.domain')}"/> 
	</bean>
	<!-- End -->
	<!-- BTG filters -->
	<bean id="abstractBtgFilter" class="com.tisl.mpl.storefront.filters.btg.AbstractBtgFilter" abstract="true" >
		<property name="eventService" ref="eventService"/>
		<property name="siteConfigService" ref="siteConfigService"/>
	</bean>

	<!-- <bean id="refererHeaderBtgFilter" class="com.tisl.mpl.storefront.filters.btg.RefererHeaderBtgFilter" parent="abstractBtgFilter"/>

	<bean id="requestParamsBtgFilter" class="com.tisl.mpl.storefront.filters.btg.RequestParamsBtgFilter" parent="abstractBtgFilter"/>

	<bean id="productVisitedBtgFilter" class="com.tisl.mpl.storefront.filters.btg.ProductVisitedBtgFilter" parent="abstractBtgFilter">
		<property name="pkResolvingStrategy" ref="productPkResolvingStrategy"/>
	</bean>

	<bean id="categoryVisitedBtgFilter" class="com.tisl.mpl.storefront.filters.btg.CategoryVisitedBtgFilter" parent="abstractBtgFilter">
		<property name="pkResolvingStrategy" ref="categoryPkResolvingStrategy"/>
	</bean>

	<bean id="btgSegmentFilter" class="com.tisl.mpl.storefront.filters.btg.BTGSegmentFilter" >
		<property name="btgSegmentStrategy" ref="btgSegmentStrategy"/>
	</bean>  -->	
	
	<!-- TISPT-207 Custom filter chain for fetchToken, setHeader and tealiumData -->
	<alias name="defaultAjaxUrlTenantFilterChainList" alias="ajaxUrlTenantFilterChainList" />
	<util:list id="defaultAjaxUrlTenantFilterChainList">
		<ref bean="log4jFilter"/>
		<ref bean="storefrontSessionFilter"/>
		<ref bean="requestLoggerFilter"/>	
		<ref bean="cmsSiteFilter"/>
		<ref bean="storefrontFilter"/>
		<ref bean="urlEncoderFilter"/>
		<ref bean="springSecurityFilterChain"/>
	</util:list>
	
	<bean id="ajaxUrlFilterChain" class="de.hybris.platform.servicelayer.web.PlatformFilterChain">
	   <constructor-arg>
	   		<ref bean="ajaxUrlTenantFilterChainList"/>
	   </constructor-arg>
	</bean>
	<!-- TISPT-207 Custom filter chain for fetchToken and setHeader ends -->
	
	<alias name="defaultWithoutCartRestorationFilterChainList" alias="withoutCartRestorationFilterChainList" />
	<util:list id="defaultWithoutCartRestorationFilterChainList">
		<ref bean="log4jFilter"/>
		<ref bean="storefrontSessionFilter"/>
		<ref bean="requestLoggerFilter"/>	
		<ref bean="cmsSiteFilter"/>
		<ref bean="storefrontFilter"/>
		<ref bean="urlEncoderFilter"/>
		<ref bean="springSecurityFilterChain"/>
		<ref bean="anonymousCheckoutFilter"/>
		<ref bean="customerLocationRestorationFilter"/>
		<!-- needs to be added for making calls to IA on search page,brand page -->
		<ref bean="userDetailsRestorationFilter"/>
	</util:list>
	
	<bean id="withoutCartRestorationFilterChain" class="de.hybris.platform.servicelayer.web.PlatformFilterChain">
	   <constructor-arg>
	   		<ref bean="withoutCartRestorationFilterChainList"/>
	   </constructor-arg>
	</bean>
	
	<!-- TISPT-348 Custom filter chain for search,PDP,category and MicroSite ends -->
	<!-- PT Fix TPR-6654-->
	<bean id="pdpPincodeRestorationFilter" class="com.tisl.mpl.storefront.filters.PDPPincodeRestorationFilter" >
		<property name="pdpPincodeCookieGenerator" ref="pdpPincodeCookieGenerator"/>
		<property name="mplProductFacade" ref="mplProductFacade"/>
	</bean>
	<alias name="defaultOnlyPDPRestorationFilterChainList" alias="onlyPDPRestorationFilterChainList" />
	<util:list id="defaultOnlyPDPRestorationFilterChainList">
		<ref bean="log4jFilter"/>
		<ref bean="storefrontSessionFilter"/>
		<ref bean="requestLoggerFilter"/>	
		<ref bean="cmsSiteFilter"/>
		<ref bean="storefrontFilter"/>
		<ref bean="urlEncoderFilter"/>
		<ref bean="springSecurityFilterChain"/>
		<ref bean="anonymousCheckoutFilter"/>
		<ref bean="customerLocationRestorationFilter"/>
		<!-- needs to be added for making calls to IA on search page,brand page -->
		<ref bean="userDetailsRestorationFilter"/>
		<ref bean="pdpPincodeRestorationFilter"/>
	</util:list>
	
	<bean id="onlyPDPRestorationFilterChain" class="de.hybris.platform.servicelayer.web.PlatformFilterChain">
	   <constructor-arg>
	   		<ref bean="onlyPDPRestorationFilterChainList"/>
	   </constructor-arg>
	</bean>
</beans>
