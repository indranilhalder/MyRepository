<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:int="http://www.springframework.org/schema/integration"
   xmlns:file="http://www.springframework.org/schema/integration/file"
   xmlns:p="http://www.springframework.org/schema/p"
   xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/integration
       http://www.springframework.org/schema/integration/spring-integration.xsd
       http://www.springframework.org/schema/integration/file
       http://www.springframework.org/schema/integration/file/spring-integration-file.xsd">
 
 
 		<!-- General setup -->
 		<bean id="fileOrderComparator" class="de.hybris.platform.acceleratorservices.dataimport.batch.FileOrderComparator">
		<property name="prefixPriority">
			<map>
				<!-- default priority is 0 -->
				<entry key="offerDetail" value="1" />		
				<entry key="productOfferDetail" value="2" />			
			</map>
		</property>
	</bean>
 
    <bean id="baseDirectoryOfferProductDetail" class="java.lang.String">
        <constructor-arg value="#{baseDirectory}/${tenantId}/marketplace-offerProductDetails" />
    </bean>
 
    <!-- 1) Scan for files -->
    
    <file:inbound-channel-adapter id="batchFilesOfferProductDetail" directory="#{baseDirectoryOfferProductDetail}"
        filename-regex="^(.*)-(\d+)\.csv" comparator="fileOrderComparator" auto-startup="#{configurationService.configuration.getProperty('etail.batch.import.hotfolder.enabled')}">
        <int:poller fixed-rate="1000" />
    </file:inbound-channel-adapter>
 
    <!-- 2) move the file to processing and setup header -->
    
    <file:outbound-gateway request-channel="batchFilesOfferProductDetail" reply-channel="batchFilesOfferProductDetailProc"
        directory="#{baseDirectoryOfferProductDetail}/processing" delete-source-files="true" />

	<!-- 3) transform csv to impex file -->
	
 	<int:service-activator input-channel="batchFilesOfferProductDetailProc" output-channel="batchFilesHeaderInit"
        ref="CreateOfferProdDetHeaderSetupTask" method="execute" />
 
 	<bean id="CreateOfferProdDetHeaderSetupTask" class="de.hybris.platform.acceleratorservices.dataimport.batch.task.HeaderSetupTask">
        <property name="catalog" value="mplProductCatalog" />
        <property name="net" value="false" />
        <property name="storeBaseDirectory" ref="baseDirectoryOfferProductDetail" />
    </bean>   
    
 <!-- Transformer converters mappings --> 		 
    <bean id="batchOfferDetailConverterMapping"
    class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.mapping.impl.DefaultConverterMapping"
    p:mapping="offerDetail"
    p:converter-ref="batchOfferDetailConverter"/>
    
    <bean id="batchProductOfferDetailConverterMapping"
    class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.mapping.impl.DefaultConverterMapping"
    p:mapping="productOfferDetail"
    p:converter-ref="batchProductOfferDetailConverter"/>		    
    
 	  <!-- Converters --> 	  
  	<bean id="batchOfferDetailConverter" class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.impl.DefaultImpexConverter">
        <property name="header">
            <value>#{defaultImpexProductHeader}
            	 # Insert OfferDetail
              INSERT_UPDATE OfferDetail;offerId[unique=true];message;messageDet;column1;column2;column3;column4
            </value>
        </property>
        <property name="impexRow">
            <value>;{+0};{+1};{+2};</value>
        </property>
        </bean>
        
        <bean id="batchProductOfferDetailConverter" class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.impl.DefaultImpexConverter">
        <property name="header">
            <value>#{defaultImpexProductHeader}
            	 # Insert ProductOfferDetail
             INSERT_UPDATE ProductOfferDetail;productId[unique=true][mode=append];sellerId[unique=true][mode=append];offer(offerId);startDate[dateformat=yyyyMMddHHmmss];endDate[dateformat=yyyyMMddHHmmss];column1;column2;column3;column4
            </value>
        </property>
        <property name="impexRow">
            <value>;{+0};{+1};{+2};{+3};{+4};</value>
        </property>
        </bean>       
       
  </beans>