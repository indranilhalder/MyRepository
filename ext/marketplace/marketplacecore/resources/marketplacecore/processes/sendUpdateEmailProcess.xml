<?xml version="1.0" encoding="utf-8"?>
<process xmlns="http://www.hybris.de/xsd/processdefinition" start="generateSendUpdateEmail" name="sendUpdateEmailProcess"
		processClass="de.hybris.platform.commerceservices.model.process.SendUpdateProcessModel" onError="error">

	<action id="generateSendUpdateEmail" bean="generateSendUpdateEmail">
		<transition name="OK" to="sendEmail"/>
		<transition name="NOK" to="error"/>
	</action>

	<action id="sendEmail" bean="sendEmail">
		<transition name="OK" to="removeSentEmail"/>
		<transition name="NOK" to="failed"/>
	</action>

	<action id="removeSentEmail" bean="removeSentEmail">
		<transition name="OK" to="success"/>
		<transition name="NOK" to="error"/>
	</action>
	
	<end id="error" state="ERROR">Something went wrong.</end>
	<end id="failed" state="FAILED">Could not send send invoice email.</end>
	<end id="success" state="SUCCEEDED">Sent send invoice email.</end>

</process>