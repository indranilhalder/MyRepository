<?xml version="1.0" encoding="UTF-8"?>
<process xmlns="http://www.hybris.de/xsd/processdefinition" start="generateInventoryReservationFailedEmail" name="inventoryReservationFailedEmailProcess"
		processClass="de.hybris.platform.orderprocessing.model.OrderProcessModel" onError="error">

	<action id="generateInventoryReservationFailedEmail" bean="generateInventoryReservationFailedEmail">
		<transition name="OK" to="sendEmail"/>
		<transition name="NOK" to="error"/>
	</action>

	<action id="sendEmail" bean="sendEmail">
		<transition name="OK" to="removeSentEmail"/>
		<transition name="NOK" to="failed"/>
	</action>

	<action id="removeSentEmail" bean="removeSentEmail">
		<transition name="OK" to="success"/>
		<transition name="NOK" to="error"/>
	</action>

	<end id="error" state="ERROR">Something went wrong.</end>
	<end id="failed" state="FAILED">Could not send payment timeout email.</end>
	<end id="success" state="SUCCEEDED">Sent payment timeout email.</end>

</process>