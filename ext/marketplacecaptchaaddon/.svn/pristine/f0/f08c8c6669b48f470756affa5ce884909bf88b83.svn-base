<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">


		<context:component-scan base-package="com.tisl.mpl"/>

<aop:config proxy-target-class="true" expose-proxy="true">
		<aop:aspect id="prepWidgetAspect" ref="reCaptchaAspect">
			<aop:around method="prepare"
			            pointcut="execution(* com.tisl.mpl.controllers.pages..*.getWidget(..))"/>
		</aop:aspect>
		<aop:aspect id="prepLoginReCaptchaAspect" ref="reCaptchaAspect">
			<aop:around method="prepare"
			            pointcut="execution(* com.tisl.mpl.storefront.controllers.pages..*.doLogin(..))"/>
		</aop:aspect>
		<!-- <aop:aspect id="loginReCaptchaAspect" ref="reCaptchaAspect">
			<aop:around  method="advise"
			            pointcut="execution(* com.tisl.mpl.controllers.pages..*.resultOfCatpcha(..))"/>
		</aop:aspect> -->
		<aop:aspect id="prepCheckoutRegistratonReCaptchaAspect" ref="reCaptchaAspect">
			<aop:around method="prepare" 
			            pointcut="execution(* com.tisl.mpl.storefront.controllers.pages..*.doCheckoutLogin(..))"/>
		</aop:aspect>
		<aop:aspect id="checkoutRegistratonReCaptchaAspect" ref="reCaptchaAspect">
			<aop:around method="advise"
			            pointcut="execution(* com.tisl.mpl.storefront.controllers.pages..*.doCheckoutRegister(..))"/>
		</aop:aspect>
	</aop:config>
	<alias name="defaultReCaptchaAspect" alias="reCaptchaAspect"/>
	<bean name="defaultReCaptchaAspect" class="com.tisl.mpl.security.captcha.ReCaptchaAspect">
		<property name="siteConfigService" ref="siteConfigService"/>
		<property name="baseStoreService" ref="baseStoreService"/>
	</bean>




</beans>
