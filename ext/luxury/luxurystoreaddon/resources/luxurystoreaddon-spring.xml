	<bean id="luxurystoreaddonCoreDataImportedEventListener" parent="abstractCoreDataImportedEventListener">
		<property name="supportedChannels">
			<list value-type="de.hybris.platform.commerceservices.enums.SiteChannel">
				<value>B2C</value>
				<!--
								<value>B2B</value>
				-->
			</list>
		</property>
		<property name="addonExtensionMetadata">
			<bean class="de.hybris.platform.addonsupport.data.AddonExtensionMetadata">
				<property name="suffixChannel" value="false"/>
				<property name="baseExtensionName" value="luxurystoreaddon"/>
			</bean>
		</property>
	</bean>

	<bean id="luxurystoreaddonSampleDataEventListener" parent="abstractGenericAddOnSampleDataEventListener"  >
		<property name="extensionName" value="luxurystoreaddon" />
	</bean>
	
	<alias name="luxuryProductClassificationPopulatorList" alias="productClassificationPopulatorList"/>
	<bean id="luxuryProductClassificationPopulatorList" parent="defaultProductClassificationPopulatorList">
		<property name="populators">
			<list merge="true">
				<ref bean="luxuryProductFlagsPopulator"/>
			</list>
		</property>
	</bean>
	
	<alias name="defaultLuxuryProductFlagsPopulator" alias="luxuryProductFlagsPopulator"/>
	<bean id="defaultLuxuryProductFlagsPopulator" parent="baseProductPopulator"
			class="com.tisl.lux.facades.populators.LuxuryProductFlagsPopulator">
		<property name="mplBuyBoxUtility" ref="mplBuyBoxUtility"/>
		<property name="promotionService" ref="promotionsService"/>
		<property name="baseSiteService" ref="baseSiteService"/>
		<property name="configurationService" ref="configurationService" />
		<property name="timeService" ref="timeService" />
		</bean>
		
		
	<bean id="luxuryCmsUiExperienceRestrictionEvaluator" parent="cmsUiExperienceRestrictionEvaluator" class="com.tisl.lux.evaluator.LuxuryCMSUiExperienceRestrictionEvaluator" >
		<property name="sessionService" ref="sessionService"/>
	</bean>
	
	<bean id="cmsUiExperienceRestrictionEvaluatorMapping" class="de.hybris.platform.cms2.servicelayer.services.evaluator.CMSRestrictionEvaluatorMapping" >
		<property name="restrictionTypeCode" value="CMSUiExperienceRestriction" />
		<property name="restrictionEvaluator" ref="luxuryCmsUiExperienceRestrictionEvaluator" />
	</bean>
	
	<alias name="luxuryDeviceDetectionFacade" alias="deviceDetectionFacade"/>
	<bean id="luxuryDeviceDetectionFacade" class="com.tisl.lux.device.impl.LuxuryDeviceDetectionFacade" parent="defaultDeviceDetectionFacade">
		<property name="sessionService" ref="sessionService"/>
