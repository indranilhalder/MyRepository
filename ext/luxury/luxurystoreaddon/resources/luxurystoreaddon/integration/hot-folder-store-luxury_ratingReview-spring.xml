<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:int="http://www.springframework.org/schema/integration"
   xmlns:file="http://www.springframework.org/schema/integration/file"
   xmlns:p="http://www.springframework.org/schema/p"
   xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/integration
       http://www.springframework.org/schema/integration/spring-integration.xsd
       http://www.springframework.org/schema/integration/file
       http://www.springframework.org/schema/integration/file/spring-integration-file.xsd">
 
 <!-- General setup -->
    <bean id="baseDirectoryLuxuryratingReview" class="java.lang.String">
        <constructor-arg value="#{baseDirectory}/${tenantId}/luxury-ratingReview" />
    </bean>
 
    <!-- 1) Scan for files -->
    <file:inbound-channel-adapter id="batchFilesLuxuryratingReview" directory="#{baseDirectoryLuxuryratingReview}"
        filename-regex="^(.*)-(\d+)\.csv" comparator="fileOrderComparator">
        <int:poller fixed-rate="1000" />
    </file:inbound-channel-adapter>
 
    <!-- 2) move the file to processing and setup header -->
    <file:outbound-gateway request-channel="batchFilesLuxuryratingReview" reply-channel="batchFilesLuxuryratingReviewProc"
        directory="#{baseDirectoryLuxuryratingReview}/processing" delete-source-files="true" />

 
  <!-- 3) transform csv to impex file -->
 <int:service-activator input-channel="batchFilesHeader" output-channel="batchFilesTran" ref="batchTransformerTask"
		method="execute" />
	<bean id="batchTransformerTask" 
		  class="de.hybris.platform.acceleratorservices.dataimport.batch.task.ImpexTransformerTask" 
		  init-method="initConvertersMap">
		<property name="fieldSeparator" value="," />
		<property name="encoding" value="UTF-8" />
		<property name="linesToSkip" value="0"/>
		<property name="cleanupHelper" ref="cleanupHelper" />
	</bean>
	
 <int:service-activator input-channel="batchFilesLuxuryratingReviewProc" output-channel="batchFilesHeaderInit"
        ref="LuxuryratingReviewHeaderSetupTask" method="execute" />
 
 	<bean id="LuxuryratingReviewHeaderSetupTask" class="de.hybris.platform.acceleratorservices.dataimport.batch.task.HeaderSetupTask">
        <property name="catalog" value="luxProductCatalog" />
        <property name="net" value="false" />
        <property name="storeBaseDirectory" ref="baseDirectoryLuxuryratingReview" />
    </bean>   
 
   
     <!-- Transformer converters mappings -->
    
     <!-- Transformer for ratingReview Import -->
    <bean id="batchLuxratingReviewConverterMapping"
    class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.mapping.impl.DefaultConverterMapping"
    p:mapping="mplratingReview"
    p:converter-ref="batchLuxratingReviewConverter"/>
           
      <!-- Transformer for Product Approval when ratingReview is given Import -->      
    <bean id="batchLuxratingReview_product_approvalConverterMapping"
    class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.mapping.impl.DefaultConverterMapping"
    p:mapping="mplratingReview"
    p:converter-ref="batchLuxratingReview_product_approvalConverter"/>
    
   	 
 	 <!-- Converters -->
 	
 	<!-- Converter for Price Import --> 
       <bean id="batchLuxratingReviewConverter" class="com.tisl.mpl.dataimport.batch.converter.impl.ExtDefaultImpexConverter">
        <property name="header">
            <value>#{defaultImpexProductHeader}
            	$productCatalog=luxProductCatalog
				$catalogVersion=catalogversion(catalog(id[default=$productCatalog]),version[default='Staged'])[unique=true,default=$productCatalog:Staged]
				$supercategories=supercategories(code, $catalogVersion)
				$baseProduct=baseProduct(code,$catalogVersion)
				$approved=approvalstatus(code)[default='approved']
				$unit=unit(code)[default='pieces']
				$clAttrModifiers=system='pcmClassification',version='1',translator=de.hybris.platform.catalog.jalo.classification.impex.ClassificationAttributeTranslator,lang=en
				$catalogversion=catalogversion(catalog(id[default=luxProductCatalog]),version[default='Staged'])[unique=true,default=luxProductCatalog:Staged]
				$variantType=variantType(code)[default='PcmProductVariant']
				$lang=en
				$clAttrModifiers=system='pcmClassification',version='1',translator=de.hybris.platform.catalog.jalo.classification.impex.ClassificationAttributeTranslator,lang=en
				$catalogversion=catalogversion(catalog(id[default=luxProductCatalog]),version[default='Staged'])[unique=true,default=luxProductCatalog:Staged]
				
				
				INSERT_UPDATE RATINGREVIEW;MPLPRODUCTID[unique=true];MPLREVIEWCOUNT;MPLAVERAGERATING;MPLONESTAR;MPLTWOSTAR;MPLTHREESTAR;MPLFOURSTAR;MPLFIVESTAR;$catalogversion
            </value>
        </property>
        <property name="impexRow">
            <value>;{+0};{1};{2};{3};{4};{5};{6};{7}</value>
        </property>
        </bean>
        
        <!-- Converter for Product Approval when price is given Import --> 
        <bean id="batchLuxratingReview_product_approvalConverter" class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.impl.DefaultImpexConverter" >
        <property name="header">
            <value>#{defaultImpexProductHeader}
            	$productCatalog=luxProductCatalog
				$catalogVersion=catalogversion(catalog(id[default=$productCatalog]),version[default='Staged'])[unique=true,default=$productCatalog:Staged]
				$supercategories=supercategories(code, $catalogVersion)
				$baseProduct=baseProduct(code,$catalogVersion)
				$approved=approvalstatus(code)[default='approved']
				$unit=unit(code)[default='pieces']
				$clAttrModifiers=system='pcmClassification',version='1',translator=de.hybris.platform.catalog.jalo.classification.impex.ClassificationAttributeTranslator,lang=en
				$catalogversion=catalogversion(catalog(id[default=luxProductCatalog]),version[default='Staged'])[unique=true,default=luxProductCatalog:Staged]
				$variantType=variantType(code)[default='PcmProductVariant']
				$lang=en
				$clAttrModifiers=system='pcmClassification',version='1',translator=de.hybris.platform.catalog.jalo.classification.impex.ClassificationAttributeTranslator,lang=en
				$catalogversion=catalogversion(catalog(id[default=luxProductCatalog]),version[default='Staged'])[unique=true,default=luxProductCatalog:Staged]
				
				UPDATE Product;code[unique=true];ratingReview(mplproductID,$catalogversion);$catalogVersion
            </value>
        </property>
        <property name="impexRow">
            <value>;{+0};{0}</value>
        </property>
       
        </bean>
        
      
     
      </beans>